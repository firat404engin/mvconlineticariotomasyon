<style>
    .btn-container {
        display: flex;
        gap: 15px;
    }

    .btn {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        border: none;
        padding: 10px 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .btn-primary {
        background: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background: #0056b3;
        }

    .btn-favorite {
        display: flex;
        align-items: center;
        gap: 8px;
        background: #ff4d4d;
        color: white;
        padding: 10px 16px;
        font-size: 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn-favorite i {
            font-size: 18px;
        }

        .btn-favorite:hover {
            background: #e63946;
        }

        .btn-favorite.favorited {
            background: #4CAF50;
        }
</style>

<script>
    document.getElementById("favoriteButton").addEventListener("click", function () {
        this.classList.toggle("favorited");
        let icon = this.querySelector("i");
        let text = this.querySelector("span");

        if (this.classList.contains("favorited")) {
            icon.classList.remove("far");
            icon.classList.add("fas");
            text.textContent = "Favorilerden Çıkar";
        } else {
            icon.classList.remove("fas");
            icon.classList.add("far");
            text.textContent = "Favoriye Ekle";
        }
    });
</script>