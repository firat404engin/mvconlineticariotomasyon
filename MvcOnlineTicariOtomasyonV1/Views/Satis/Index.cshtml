@using MvcOnlineTicariOtomasyonV1.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Satış Hareket</h2>

<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.SatisID
            </td>
            <td>
                @k.Uruns.UrunAd
            </td>
            <td>
                @k.Cariler.CariAd @k.Cariler.CariSoyad
            </td>
            <td>
                @k.Personel.PersonelAd @k.Personel.PersonelSoyad
            </td>
            <td>
                @k.Adet
            </td>
            <td>
                @k.Fiyat
            </td>
            <td>
                @k.ToplamTutar
            </td>
            <td>
                @k.Tarih
            </td>

            <td><a href="/Satis/SatisGetir/@k.SatisID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@k.SatisID" class="btn btn-info" style="background-color:grey">Departman Detay</a></td>

        </tr>
    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-info">Yeni Satış Yap</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<!-- Font Awesome'ı eklemek için -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Turkish.json"
        }
    });
</script>
