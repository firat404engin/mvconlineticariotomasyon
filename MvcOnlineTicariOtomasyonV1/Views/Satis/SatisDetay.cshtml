@using MvcOnlineTicariOtomasyonV1.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Satış Detay</h2>
<br />
<table class="table table-condensed">
    <tr>
        <th> SATIŞ ID</th>
        <th> ÜRÜN</th>
        <th> CARİ</th>
        <th> PERSONEL</th>
        <th> FİYAT</th>
        <th> ADET</th>
        <th> TOPLAM</th>
        <th> TARİH</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td> @x.SatisID</td>
            <td> @x.Uruns.UrunAd</td>
            <td> @x.Cariler.CariAd  @x.Cariler.CariSoyad</td>
            <td> @x.Personel.PersonelAd  @x.Personel.PersonelSoyad</td>
            <td> @x.Fiyat</td>
            <td> @x.Adet</td>
            <td> @x.ToplamTutar</td>
            <td> @x.Tarih</td>
        </tr>
    }

</table>
<button class="btn btn-default" style="background-color:dodgerblue"> Yazdır  </button>
