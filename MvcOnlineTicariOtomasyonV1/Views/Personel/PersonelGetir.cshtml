@model MvcOnlineTicariOtomasyonV1.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2 class="text-center"> Personel Güncelleme</h2>
<br />
@using (Html.BeginForm("PersonelGuncelle", "Personel",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <br />
        @if (!string.IsNullOrEmpty(Model.PersonelGorsel))
        {
            <img src="@Model.PersonelGorsel" alt="Personel Görseli" class="personel-gorsel" />
        }
        <br />
        @Html.HiddenFor(x => x.PersonelID)

        <label for="PersonelAd">Ad</label>
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
        <br />

        <label for="PersonelSoyad">Soyad</label>
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PersonelSoyad, "", new { @style = "color:red" })

        <br />

        <label for="PersonelGorsel">Görsel</label>
        <input type="file" name="PersonelGorsel" />
        <br />

        <label for="Departman">Departman</label>
        @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1,
            new { @class = "form-control" })
        <br />

        <button type="submit" class="btn btn-primary btn-block"> Güncelle</button>
    </div>
}

<style>
    /* Container Styling */
    .form-group {
        max-width: 600px;
        margin: 0 auto;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Başlık */
    h2 {
        font-size: 32px;
        font-weight: 600;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Görsel */
    .personel-gorsel {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #007bff;
        margin-bottom: 15px;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }


    /* Textbox */
    .form-control {
        border-radius: 8px;
        box-shadow: none;
        border: 2px solid #ced4da;
        margin-bottom: 15px;
        padding: 12px;
        font-size: 16px;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

    /* Buton */
    button.btn {
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        background-color: #007bff;
        color: white;
        border: none;
        transition: 0.3s ease;
    }

        button.btn:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    /* Select Box */
    .form-control, select {
        width: 100%;
        height: 45px;
        padding: 10px;
        font-size: 16px;
    }
</style>
