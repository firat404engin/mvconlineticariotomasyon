@model MvcOnlineTicariOtomasyonV1.Models.Siniflar.KargoDetay

@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2 class="text-center">Yeni Kargo Bilgisi Ekle</h2>
<br />

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Kargo Bilgisi Ekle</h4>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="mb-3">
                    @Html.LabelFor(x => x.TakipKodu, new { @class = "form-label fw-bold" })
                    <input type="text" class="form-control bg-light" value="@ViewBag.KargoKod" name="TakipKodu" readonly />

                    @Html.LabelFor(x => x.Personel, new { @class = "form-label fw-bold mt-2" })
                    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control", placeholder = "Personel Adını Girin" })

                    @Html.LabelFor(x => x.Alici, new { @class = "form-label fw-bold mt-2" })
                    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control", placeholder = "Alıcı Adını Girin" })

                    @Html.LabelFor(x => x.Aciklama, new { @class = "form-label fw-bold mt-2" })
                    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", placeholder = "Açıklama Girin", rows = "3" })

                    @Html.LabelFor(x => x.Tarih, new { @class = "form-label fw-bold mt-2" })
                    <input class="form-control" type="date" name="Tarih" />
                </div>

                <div class="text-center">
                    <button class="btn btn-success w-100 py-2">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
